<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_dialogcategorie_toutcategorie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/shape_btn_ttcategorie"
        android:text="TOUTES LES CATEGORIE"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/rec_dialogcategorie_categories"
        app:layout_constraintStart_toStartOf="@+id/rec_dialogcategorie_categories"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_dialogcategorie_categories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dialogcategorie_toutcategorie">

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>